<?xml version="1.0" ?>
<?xml-stylesheet type='text/xsl' href='interface.xsl'?>
<interface xmlns="http://zero-install.sourceforge.net/2004/injector/interface">
  <name>ROX-Lib3</name>
  <summary>library for ROX applications</summary>
  <description>
    ROX-Lib contains shared code used by most of the ROX applications.
  </description>
  <icon href="http://rox.sourceforge.net/Icons/ROX-Lib.png" type="image/png"/>

  <feed-for interface="http://rox.sourceforge.net/2005/interfaces/ROX-Lib"/>

  <release:management xmlns:release="http://zero-install.sourceforge.net/2007/namespaces/0release">
    <release:action phase="commit-release">sed -i &quot;s/&lt;Version&gt;.*&lt;\/Version&gt;$/&lt;Version&gt;$RELEASE_VERSION&lt;\/Version&gt;/&quot; ROX-Lib3/AppInfo.xml</release:action>
    <release:action phase="commit-release">sed -i &quot;s/^roxlib_version = .*$/roxlib_version = (`echo $RELEASE_VERSION|sed 's/\./, /g'`)/&quot; ROX-Lib3/python/rox/__init__.py</release:action>
    <release:action phase="generate-archive">cd ROX-Lib3/python &amp;&amp; ./make_docs.py &amp;&amp; rm -f rox/*.pyc</release:action>
    <release:action phase="generate-archive">cd ROX-Lib3/Messages &amp;&amp; ./dist</release:action>
  </release:management>

  <group main="ROX-Lib3/AppRun">
    <implementation id=".." version="3.0.0-pre"/>
  </group>
</interface>
